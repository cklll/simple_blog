<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<%= link_to 'New Post', new_post_path %>

<% @posts.each do |post| %>

<h2><%= post.title %></h2>
<h6><%= post.username %> on <span><%= post.created_at %></span></h6>
<p>
  <%= simple_format post.content %>
</p>
<%= link_to "Link to post", post_path(post) %>

<hr>

<% end %>
